<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="586dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:src="@drawable/drylogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNIN PAGE"
            android:textStyle="bold"
            android:textSize="27dp"
            android:textColor="#C61919"
            android:id="@+id/label1"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:id="@+id/username"
            android:textSize="19dp"
            android:textColor="#fe000000"
            android:layout_marginTop="45dp"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/label1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:id="@+id/password"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:textColor="#fe000000"
            android:layout_below="@+id/username"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_username"
            android:textSize="18dp"
            android:hint="Enter Email"
            android:layout_marginLeft="20dp"
            android:layout_above="@+id/password"
            android:layout_toRightOf="@+id/password"
            android:layout_toEndOf="@+id/password" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_password"
            android:textSize="18dp"
            android:hint="Enter Password"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/password"
            android:layout_toRightOf="@+id/password"
            android:layout_toEndOf="@+id/password" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="SIGN IN"
            android:id="@+id/signin_btn"
            android:textSize="24dp"
            android:padding="10dp"
            android:textColor="#ff050505"
            android:background="#C61919"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/checkbox"
             />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="CANCEL"
            android:id="@+id/cancel_btn"
            android:textSize="24dp"
            android:padding="10dp"
            android:layout_marginLeft="40dp"
            android:textColor="#ff050505"
            android:background="#C61919"
            android:layout_alignTop="@+id/signin_btn"
            android:layout_alignLeft="@+id/et_username"
            android:layout_alignStart="@+id/et_username" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REMEMBER PASSWORD"
            android:id="@+id/checkbox"
            android:textSize="13dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot PASSWORD?"
            android:id="@+id/textView"
            android:textSize="12dp"
            android:layout_marginTop="24dp"
            android:textColor="#ff080808"
            android:layout_below="@+id/et_password"
            android:layout_alignRight="@+id/et_password"
            android:layout_alignEnd="@+id/et_password" />


    </RelativeLayout>
</LinearLayout>