<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="581dp"
        android:background="#ffffffff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/imageView"
           android:src="@drawable/drylogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNUP PAGE"
            android:textStyle="bold"
            android:textSize="27dp"
            android:textColor="#C61919"
            android:id="@+id/label1"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:id="@+id/username"
            android:textSize="19dp"
            android:textColor="#fe000000"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/label1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:id="@+id/password"
            android:textSize="19dp"
            android:layout_marginTop="35dp"
            android:textColor="#fe000000"
            android:layout_below="@+id/username"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:id="@+id/email"
            android:textSize="19dp"
            android:layout_marginTop="35dp"
            android:textColor="#fe000000"
            android:layout_below="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_username"
            android:textSize="18dp"
            android:hint="Enter Name"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/username"
            android:layout_toRightOf="@+id/username"
            android:layout_toEndOf="@+id/username" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_password"
            android:textSize="18dp"
            android:hint="Enter Password"
            android:layout_marginLeft="20dp"
            android:layout_above="@+id/email"
            android:layout_toRightOf="@+id/password"
            android:layout_toEndOf="@+id/password" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_confirm_password"
            android:textSize="18dp"
            android:hint="Enter Email"
            android:layout_marginLeft="65dp"
            android:layout_alignBottom="@+id/email"
            android:layout_toRightOf="@+id/email"
            android:layout_toEndOf="@+id/email" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="SIGN IN"
            android:id="@+id/signin_btn"
            android:textSize="24dp"
            android:padding="10dp"
            android:textColor="#ff050505"
            android:background="#C61919"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/email"
            android:layout_marginLeft="60dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="CANCEL"
            android:id="@+id/cancel_btn"
            android:textSize="24dp"
            android:padding="10dp"
            android:layout_marginLeft="40dp"
            android:textColor="#ff050505"
            android:background="#C61919"
            android:layout_alignTop="@+id/signin_btn"
            android:layout_alignLeft="@+id/et_password"
            android:layout_alignStart="@+id/et_password" />

    </RelativeLayout>
</LinearLayout>