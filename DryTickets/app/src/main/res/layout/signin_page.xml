<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="586dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:src="@drawable/drylogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNIN PAGE"
            android:textStyle="bold"
            android:textSize="27dp"
            android:textColor="#C61919"
            android:id="@+id/label1"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/label1"
            android:weightSum="2"
            android:padding="10dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:id="@+id/username"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="#fe000000"
                android:layout_weight="0.8"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_username"
                android:textSize="19dp"
                android:hint="Enter Email"
                android:layout_weight="1.05"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/user_layout"
            android:weightSum="2"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:id="@+id/password"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="#fe000000"
                android:layout_weight="0.8"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_password"
                android:textSize="19dp"
                android:hint="Enter Password"
                android:layout_weight="1.05"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/pass_layout"
            android:weightSum="2"
            android:padding="20dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMEMBER PASSWORD"
                android:id="@+id/remember_check"
                android:textSize="13dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot PASSWORD?"
                android:id="@+id/textView"
                android:textSize="12dp"
                android:textColor="#ff080808"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/opt_layout"
            android:padding="40dp"
            android:gravity="center_horizontal">
            <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="SIGN IN"
            android:id="@+id/signin_btn"
            android:textSize="24dp"
            android:padding="10dp"
            android:textColor="#ff050505"
            android:background="#C61919"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="CANCEL"
                android:id="@+id/cancel_btn"
                android:textSize="24dp"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ff050505"
                android:background="#C61919"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>